<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/red"
                android:endColor="@color/red_white"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="@color/red" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/red"
                android:startColor="@color/orange"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="@color/red" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/red"
                android:startColor="@color/light_red"
                android:angle="270" />
            <stroke
                android:width="3dp"
                color="@color/red" />
            <corners
                android:radius="10dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>
</selector>
