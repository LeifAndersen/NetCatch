<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="100dp"
	>
	<ImageView
		android:layout_width="fill_parent"
		android:layout_height="100dp"
		android:background="@drawable/ninepatch_list_item_stroke_and_shadow"
		android:src="@drawable/background_tile"
		android:scaleType="fitXY"
		/>
	<ImageView
		android:id="@+id/list_album_art"
		android:layout_width="80dp"
		android:layout_height="80dp"
		android:layout_gravity="center_vertical"
		android:layout_marginLeft="5dp"
		android:layout_alignParentLeft="true"
		android:background="@drawable/ninepatch_album_art_drop_shadow"
		android:src="@drawable/image_album_background"
		android:scaleType="centerInside"
		/>
	<LinearLayout
		android:id="@+id/list_info_holder"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="90dp"
		android:layout_gravity="center_vertical"
		android:orientation="vertical"
		>
		<TextView
			android:id="@+id/list_feed_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingBottom="5dp"
			android:textColor="@android:color/white"
			android:textSize="20sp"				
			android:text=""
			android:ellipsize="marquee"
			android:lines="1"
			android:shadowColor="#FF000000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="5"
			/>
		<TextView
			android:id="@+id/list_feed_counts"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/list_feed_title"
			android:textColor="@android:color/white"
			android:textSize="12sp"				
			android:text=""
			android:ellipsize="marquee"
			android:lines="1"
			android:shadowColor="#FF000000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="5"
			/>
		<TextView
			android:id="@+id/list_feed_update_time"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/list_feed_counts"
			android:textColor="@android:color/white"
			android:textSize="12sp"				
			android:text=""
			android:ellipsize="marquee"
			android:lines="1"
			android:shadowColor="#FF000000"
			android:shadowDx="0"
			android:shadowDy="1"
			android:shadowRadius="5"
			/>					
	</LinearLayout>
</FrameLayout>
